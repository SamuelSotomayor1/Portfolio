---
// Skills.astro
---

<section id="skills" class="h-[70vh] flex items-center bg-zinc-950">
  <div class="container px-4 mx-auto py-16">
    <h2 class="text-4xl md:text-5xl font-bold mb-12 text-center bg-clip-text text-transparent bg-gradient-to-r from-cyan-400 to-purple-500">
      Technologies
    </h2>
    <div class="flex flex-wrap justify-center gap-6">
      <!-- Skill Badges -->
      <div class="group flex items-center gap-4 px-6 py-4 rounded-full transition-all duration-300 bg-zinc-900 border-zinc-800 border hover:bg-gradient-to-r hover:from-cyan-500/20 hover:to-purple-500/20 hover:border-cyan-500/50">
        <div class="text-zinc-500 group-hover:text-cyan-400 transition-colors duration-300">
          <!-- React Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 16l4-4-4-4"></path>
            <path d="M6 8l-4 4 4 4"></path>
            <path d="M14.5 4l-5 16"></path>
          </svg>
        </div>
        <span class="text-zinc-400 group-hover:text-white transition-colors duration-300">React</span>
      </div>

      <div class="group flex items-center gap-4 px-6 py-4 rounded-full transition-all duration-300 bg-zinc-900 border-zinc-800 border hover:bg-gradient-to-r hover:from-cyan-500/20 hover:to-purple-500/20 hover:border-cyan-500/50">
        <div class="text-zinc-500 group-hover:text-cyan-400 transition-colors duration-300">
          <!-- Next.js Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polygon points="12 2 2 7 12 12 22 7 12 2"></polygon>
            <polyline points="2 17 12 22 22 17"></polyline>
            <polyline points="2 12 12 17 22 12"></polyline>
          </svg>
        </div>
        <span class="text-zinc-400 group-hover:text-white transition-colors duration-300">Next.js</span>
      </div>

      <div class="group flex items-center gap-4 px-6 py-4 rounded-full transition-all duration-300 bg-zinc-900 border-zinc-800 border hover:bg-gradient-to-r hover:from-cyan-500/20 hover:to-purple-500/20 hover:border-cyan-500/50">
        <div class="text-zinc-500 group-hover:text-cyan-400 transition-colors duration-300">
          <!-- Angular Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
            <polyline points="3.29 7 12 12 20.71 7"></polyline>
            <line x1="12" y1="22" x2="12" y2="12"></line>
          </svg>
        </div>
        <span class="text-zinc-400 group-hover:text-white transition-colors duration-300">Angular</span>
      </div>

      <div class="group flex items-center gap-4 px-6 py-4 rounded-full transition-all duration-300 bg-zinc-900 border-zinc-800 border hover:bg-gradient-to-r hover:from-cyan-500/20 hover:to-purple-500/20 hover:border-cyan-500/50">
        <div class="text-zinc-500 group-hover:text-cyan-400 transition-colors duration-300">
          <!-- TypeScript Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <path d="m10 13-2 2 2 2"></path>
            <path d="m14 17 2-2-2-2"></path>
          </svg>
        </div>
        <span class="text-zinc-400 group-hover:text-white transition-colors duration-300">TypeScript</span>
      </div>

      <div class="group flex items-center gap-4 px-6 py-4 rounded-full transition-all duration-300 bg-zinc-900 border-zinc-800 border hover:bg-gradient-to-r hover:from-cyan-500/20 hover:to-purple-500/20 hover:border-cyan-500/50">
        <div class="text-zinc-500 group-hover:text-cyan-400 transition-colors duration-300">
          <!-- JavaScript Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="3" width="7" height="7"></rect>
            <rect x="14" y="3" width="7" height="7"></rect>
            <rect x="14" y="14" width="7" height="7"></rect>
            <rect x="3" y="14" width="7" height="7"></rect>
          </svg>
        </div>
        <span class="text-zinc-400 group-hover:text-white transition-colors duration-300">JavaScript</span>
      </div>

      <div class="group flex items-center gap-4 px-6 py-4 rounded-full transition-all duration-300 bg-zinc-900 border-zinc-800 border hover:bg-gradient-to-r hover:from-cyan-500/20 hover:to-purple-500/20 hover:border-cyan-500/50">
        <div class="text-zinc-500 group-hover:text-cyan-400 transition-colors duration-300">
          <!-- MongoDB Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
          </svg>
        </div>
        <span class="text-zinc-400 group-hover:text-white transition-colors duration-300">MongoDB</span>
      </div>

      <div class="group flex items-center gap-4 px-6 py-4 rounded-full transition-all duration-300 bg-zinc-900 border-zinc-800 border hover:bg-gradient-to-r hover:from-cyan-500/20 hover:to-purple-500/20 hover:border-cyan-500/50">
        <div class="text-zinc-500 group-hover:text-cyan-400 transition-colors duration-300">
          <!-- MySQL Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="4" y="4" width="16" height="16" rx="2" ry="2"></rect>
            <rect x="9" y="9" width="6" height="6"></rect>
            <line x1="9" y1="1" x2="9" y2="4"></line>
            <line x1="15" y1="1" x2="15" y2="4"></line>
            <line x1="9" y1="20" x2="9" y2="23"></line>
            <line x1="15" y1="20" x2="15" y2="23"></line>
          </svg>
        </div>
        <span class="text-zinc-400 group-hover:text-white transition-colors duration-300">MySQL</span>
      </div>

      <div class="group flex items-center gap-4 px-6 py-4 rounded-full transition-all duration-300 bg-zinc-900 border-zinc-800 border hover:bg-gradient-to-r hover:from-cyan-500/20 hover:to-purple-500/20 hover:border-cyan-500/50">
        <div class="text-zinc-500 group-hover:text-cyan-400 transition-colors duration-300">
          <!-- TailwindCSS Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 4l2 4h-4l2-4z"></path>
            <path d="M4 4h16l-2 12H6L4 4z"></path>
          </svg>
        </div>
        <span class="text-zinc-400 group-hover:text-white transition-colors duration-300">TailwindCSS</span>
      </div>
    </div>
  </div>
</section>